<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Survey Hub</title>

    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
</head>

<body>

    <%- include('../../layouts/header.ejs') -%>

    <div class="container-sm ">
        <div class="border rounded p-4">
            <div class="d-flex justify-content-between align-items-center">
                <h2>
                    Опрос: <%= survey.title -%>
                </h2>

                <div class="d-flex gap-2">
                    <a href="/admin/surveys/<%= survey.id -%>/answers" class="btn btn-outline-dark">
                        Ответы
                    </a>
                    <a href="/admin/surveys/<%= survey.id -%>/links" class="btn btn-outline-dark">
                        Ссылки
                    </a>
                    <a href="/admin/surveys" class="btn btn-outline-dark">
                        Назад
                    </a>
                </div>
            </div>

            <hr />

            <% if (badRequestMessage) { %>
                <div class="alert alert-danger" role="alert">
                   <%= badRequestMessage -%>
                </div>
            <% } %>

            <% if (successMessage) { %>
                <div class="alert alert-success" role="alert">
                   <%= successMessage -%>
                </div>
            <% } %>

            <form action="/admin/surveys/<%= survey.id -%>/edit" method="post">

                <div class="mb-3">
                    <label for="title"
                        class="form-label">Заголовок опроса</label>
                    <input type="text" class="form-control <%= violationError?.['title'] && 'is-invalid' -%>" id="title" placeholder="Заголовок"
                        name="title" value="<%= survey?.title -%>">

                    <div class="invalid-feedback">
                        <%=  violationError?.['title'] && 'is-invalid' -%>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="title"
                        class="form-label">Описание опроса</label>
                    <input type="text" class="form-control <%= violationError?.['description'] && 'is-invalid' -%>" id="title" placeholder="Описание"
                        name="description" value="<%= survey?.description -%>">

                    <div class="invalid-feedback">
                        <%=  violationError?.['description'] && 'is-invalid' -%>
                    </div>
                </div>

                <label>
                    Выберите категории:
                </label>
                <select name="categoryId" class="form-select form-select-lg mb-3" aria-label="Large select example">
                    <% categories.forEach(category => { %>
                        <option value="<%= category.id -%>" <%= category.id === survey?.categoryId && 'selected' -%>>
                            <%= category.name -%>
                        </option>
                    <% }) %>
                  </select>

                <button type="submit" class="btn btn-outline-success w-100">
                    Обновить опрос
                </button>

            </form>

            <div class="row mt-4">
                <% survey.questions.forEach((question, questionIndex) => { %>
                    <div class="col-md-6 mb-3">
                        <form action="/admin/surveys/<%= survey.id -%>/questions/<%= question.id -%>" method="post">
                            <div class="card-header">
                                <label for="question<%= questionIndex -%>"
                                    class="form-label">Вопрос <%= questionIndex + 1 -%></label>
                                <input type="text" class="form-control <%= violationError?.[`questions[${questionIndex}]`] && 'is-invalid' -%>" id="question<%= questionIndex -%>" placeholder="Вопрос"
                                    name="question" value="<%= question.value -%>">
            
                                <div class="invalid-feedback">
                                    <%= violationError?.[`questions[${questionIndex}]`] -%>
                                </div>
                            </div>

                            <div class="card-body">
                                <div class="row">
                                    <% question.answers.forEach((answer, answerIndex) => { %>
                                        <input type="hidden" name="answerIds" value="<%= answerIndex -%>" />
                                        <div class="col-mb-6 mb-3">
                                            <label for="question<%= questionIndex -%>-<%= answerIndex -%>"
                                                class="form-label">Ответ <%= answerIndex + 1 -%></label>
                                            <input type="text" class="form-control <%= violationError?.[`answers-${questionIndex}-${answerIndex}`] && 'is-invalid' -%>" id="question<%= questionIndex -%>-<%= answerIndex -%>" placeholder="Ответ"
                                                name="answers" value="<%= answer.value -%>">
                        
                                            <div class="invalid-feedback">
                                                <%= violationError?.[`answers-${questionIndex}-${answerIndex}`] -%>
                                            </div>
                                        </div>
                                    <% }) %>
                                </div>
                            </div>

                            <div class="card-footer">
                                <div class="d-flex gap-2">
                                    <input type="radio" class="btn-check" name="type" id="option<%= questionIndex -%>" autocomplete="off" checked value="one">
                                    <label class="btn btn-outline-dark w-100" for="option<%= questionIndex -%>">Одиночный</label>

                                    <input type="radio" class="btn-check" name="type" id="option<%= questionIndex -%>k" autocomplete="off" value="many">
                                    <label class="btn btn-outline-dark w-100" for="option<%= questionIndex -%>k">Множественный</label>
                                </div>

                                <button type="submit" class="btn btn-outline-success w-100">
                                    Обновить вопрос
                                </button>
                            </div>
                        </form>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

    <script src="/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>