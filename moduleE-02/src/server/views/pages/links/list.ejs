<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Survey Hub</title>

    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
</head>

<body>

    <%- include('../../layouts/header.ejs') -%>

    <div class="container-sm ">
        <div class="border rounded p-4">
            <div class="d-flex justify-content-between align-items-center">
                <h2>
                    Ссылки: <%= links.surveyId -%> (surveyId)
                </h2>

                <div class="d-flex gap-2">
                    <form action="/admin/surveys/<%= links.surveyId -%>/links" method="post">
                        <button type="submit" class="btn btn-outline-dark w-100">
                            Создать
                        </button>
                    </form>
                    <a href="/admin/surveys/<%= links.surveyId -%>" class="btn btn-outline-dark">
                        Назад
                    </a>
                </div>
            </div>

            <hr />

            <% if (badRequestMessage) { %>
                <div class="alert alert-danger" role="alert">
                   <%= badRequestMessage -%>
                </div>
            <% } %>

            <% if (successMessage) { %>
                <div class="alert alert-success" role="alert">
                   <%= successMessage -%>
                </div>
            <% } %>

            <div class="d-flex flex-column gap-2">
                <% links.links.map(link => { %>
                    <div class="card">
                        <div class="card-body">
                            <%= link.code -%>
                        </div>
                        <div class="card-footer">
                            <form class="w-100" action="/admin/surveys/<%= links.surveyId -%>/links/<%= link.id -%>/delete" method="post">
                                <button type="submit" class="btn btn-outline-dark w-100">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>

            <% if (links.links.length < 1) { %>
                <div class="text-center text-danger fs-2 mt-2">
                    НЕ НАЙДЕНО
                </div>
            <% } %>
        </div>
    </div>

    <script src="/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>